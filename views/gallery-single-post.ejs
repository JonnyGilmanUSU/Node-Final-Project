<h1><span><%=style.title%></span></h1>
<div>
	<img src="/<%=style.imageURL%>" alt="<%=style.description%>">
	<div class="article">
		<h4><%=style.title%></h4>
		<p><%=style.description%></p>
	</div>
	<% if (locals.isLoggedIn) { %>
		<form action="/saveFavorite/<%= style._id %>" method="POST">
        	<button type="submit">Save as favorite</button>
		</form>
	<% } %>
</div>
</div>
