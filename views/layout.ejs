<!doctype html>
<!-- Website Template by freewebsitetemplates.com -->
<html>
    <head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title><%=pageTitle%></title>
	<link rel="stylesheet" type="text/css" href="/css/style.css">
	<link rel="stylesheet" type="text/css" href="/css/mobile.css" media="screen and (max-width : 568px)">
	<link rel="shortcut icon" type="image/png" href="/images/icons/icon-mustache.png"/>
	<script type="text/javascript" src="/js/mobile.js"></script>
    </head>
    <body>
	<div id="header">
	    <a href="/" class="logo">
		<img src="images/logo.jpg" alt="">
	    </a>
	    <ul id="navigation">
		<li class="<%- path === '/' ? 'selected' : ''%>">
		    <a href="/">home</a>
		</li>
		<li class="<%- path.includes('about') ? 'selected' : ''%>">
		    <a href="/about">about</a>
		</li>
		<li class="<%- path.includes('styles') ? 'selected' : ''%>">
		    <a href="/styles">gallery</a>
		</li>
		<li class="<%- path.includes('blog') ? 'selected' : ''%>">
		    <a href="/blog">blog</a>
		</li>
		<li class="<%- path === '/contacts/new' ? 'selected' : ''%>">
		    <a href="/contacts/new">contact</a>
		</li>
		<% if (locals.isLoggedIn && locals.user.admin) { %>
		<li class="<%- path === '/contacts' ? 'selected' : ''%>">
			<a href="/contacts">contact requests</a>
		</li>
		<% } %>
		<li>
			<% if (locals.isLoggedIn) { %>
				<a href="/logout">Logout</a>
			<% } else { %>
				<a class="<%= pageTitle === 'Login' ? 'active' : '' %>" href="/login">Login</a>
			<% } %>
		</li>
		<% if (locals.isLoggedIn) { %>
			<li class="<%- path === '/favoriteStyles' ? 'selected' : ''%>">
				<a href="/favoriteStyles">Favorite Styles</a>
			</li>
		<% } %>
		<% if (locals.isLoggedIn && locals.user.admin) { %>
			<li class="<%- path === '/manageAdmins' ? 'selected' : ''%>">
				<a href="/manageAdmins">Manage Admins</a>
			</li>
		<% } %>
		<% if (locals.isLoggedIn) { %>
			<li class="<%- path === '/blog/getCreateBlogPost' ? 'selected' : ''%>">
				<a href="/blog/getCreateBlogPost">Create Blog Post</a>
			</li>
		<% } %>
		<li class="<%- path === '/dog' ? 'selected' : ''%>">
			<a href="/dog">External Rest Api</a>
		</li>
		
	    </ul>
	</div>
	<div id="body">
	    <%- body %>
	</div>
	<div id="footer">
	    <%- include('partials/social.ejs') %>
	</div>
    </body>
</html>
